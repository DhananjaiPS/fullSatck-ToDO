generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model todo {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
}

model user {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  name     String?
  email    String  @unique
  password String
  avtar    String?
}

model product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  thumbnail   String?
  rating      Float
}
